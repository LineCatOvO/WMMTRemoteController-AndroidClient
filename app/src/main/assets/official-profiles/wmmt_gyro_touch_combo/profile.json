{
  "name": "wmmt_gyro_touch_combo",
  "version": "1.0.0",
  "author": "LineCat Team",
  "description": "陀螺仪+触摸组合配置，使用陀螺仪转向，触摸控制油门刹车",
  "engineApiVersion": "1.0.0",
  "entry": "main.js",
  "compatibility": {
    "supportedGamepads": [],
    "minimumAndroidVersion": "8.0"
  },
  "dependencies": [],
  "config": {
    "gyro": {
      "sensitivity": 0.5,
      "deadzone": 0.2,
      "axis": "roll"
    },
    "touch": {
      "accelerateArea": {
        "x": 0,
        "y": 0,
        "width": 0.5,
        "height": 1.0
      },
      "brakeArea": {
        "x": 0.5,
        "y": 0,
        "width": 0.5,
        "height": 1.0
      }
    },
    "keys": {
      "left": "a",
      "right": "d",
      "accelerate": "w",
      "brake": "s",
      "boost": "space",
      "drift": "shift"
    }
  }
}