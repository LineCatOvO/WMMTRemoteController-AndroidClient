<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- 圆形主入口按钮 -->
    <LinearLayout
        android:id="@+id/ll_circle_entry"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/circle_button"
        android:elevation="8dp"
        android:layout_margin="8dp">

        <TextView
            android:id="@+id/tv_entry_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="W"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- 弹出菜单容器 -->
    <LinearLayout
        android:id="@+id/ll_popup_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:elevation="12dp"
        android:visibility="gone"
        android:layout_marginTop="70dp">

        <Button
            android:id="@+id/btn_start_connect"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="开始连接"
            android:textColor="@android:color/black"
            android:backgroundTint="@android:color/holo_green_light"
            android:layout_margin="8dp" />

        <Button
            android:id="@+id/btn_stop_connect"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="断开连接"
            android:textColor="@android:color/black"
            android:backgroundTint="@android:color/holo_red_light"
            android:layout_margin="8dp" />

        <Button
            android:id="@+id/btn_show_settings"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="设置"
            android:textColor="@android:color/black"
            android:backgroundTint="@android:color/holo_blue_light"
            android:layout_margin="8dp" />

        <Button
            android:id="@+id/btn_layout_management"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="布局管理"
            android:textColor="@android:color/black"
            android:backgroundTint="@android:color/holo_orange_light"
            android:layout_margin="8dp" />

        <Button
            android:id="@+id/btn_raw_input_inspector"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="原始输入检查"
            android:textColor="@android:color/black"
            android:backgroundTint="@android:color/holo_purple"
            android:layout_margin="8dp" />
    </LinearLayout>

    <!-- 设置界面容器 -->
    <LinearLayout
        android:id="@+id/ll_settings_panel"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:elevation="12dp"
        android:visibility="gone"
        android:layout_marginTop="70dp"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="连接设置"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- 连接地址 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="连接地址"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/et_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="输入服务器地址"
                android:textSize="14sp"
                android:padding="8dp"
                android:background="@android:drawable/editbox_background" />
        </LinearLayout>

        <!-- 端口号 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="端口号"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/et_port"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="输入端口号"
                android:textSize="14sp"
                android:padding="8dp"
                android:background="@android:drawable/editbox_background" />
        </LinearLayout>

        <!-- TLS选项 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <CheckBox
                android:id="@+id/cb_use_tls"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="使用TLS加密"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- 操作按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btn_save_settings"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="保存"
                android:textSize="14sp"
                android:backgroundTint="@android:color/holo_green_light"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btn_cancel_settings"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="取消"
                android:textSize="14sp"
                android:backgroundTint="@android:color/holo_red_light"
                android:layout_marginStart="8dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- 布局管理面板 -->
    <LinearLayout
        android:id="@+id/ll_layout_management_panel"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:elevation="12dp"
        android:visibility="gone"
        android:layout_marginTop="70dp"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="布局管理"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- 布局开关 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <CheckBox
                android:id="@+id/cb_layout_enabled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="启用布局"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- 布局列表 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:background="@android:drawable/editbox_background"
            android:layout_marginBottom="16dp">

            <ListView
                android:id="@+id/lv_layouts"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@android:color/darker_gray"
                android:dividerHeight="1dp" />
        </LinearLayout>

        <!-- 操作按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btn_create_layout"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="创建"
                android:textSize="14sp"
                android:backgroundTint="@android:color/holo_green_light"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btn_edit_layout"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="编辑"
                android:textSize="14sp"
                android:backgroundTint="@android:color/holo_blue_light"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btn_delete_layout"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="删除"
                android:textSize="14sp"
                android:backgroundTint="@android:color/holo_red_light"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- 返回按钮 -->
        <Button
            android:id="@+id/btn_back_from_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="返回"
            android:textSize="14sp"
            android:backgroundTint="@android:color/darker_gray"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</FrameLayout>